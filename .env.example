DEBUG=True
SECRET_KEY=insecure-dev-key-change-in-production
DATABASE_URL=postgres://user:password@db:5432/agms
REDIS_URL=redis://redis:6379/0
ALLOWED_HOSTS=localhost,127.0.0.1,backend

# Task Backend Configuration
# Options: local (sync), celery (Redis), lambda (SQS)
TASK_BACKEND=local

# AWS S3 Storage (optional - uses local storage if not configured)
USE_S3_STORAGE=false
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=agms-receipts
AWS_S3_REGION_NAME=ap-southeast-1
AWS_S3_CUSTOM_DOMAIN=

# AWS Lambda Task Queue (required if TASK_BACKEND=lambda)
TASK_QUEUE_URL=

# RDS Proxy Configuration (for Lambda deployment)
# When using RDS Proxy, set DATABASE_URL to the proxy endpoint
# Example: postgres://user:pass@agms-proxy.proxy-xxxx.region.rds.amazonaws.com:5432/agms
# RDS_PROXY_IAM=true  # Enable IAM authentication (optional)


